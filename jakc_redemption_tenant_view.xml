<openerp>
    <data>
        <!-- RDM/TENANT-->		
        <record model="ir.ui.view" id="view_rdm_tenant_form">
            <field name="name">rdm.tenant.form</field>
            <field name="model">rdm.tenant</field>						
            <field name="type">form</field>						
            <field name="arch" type="xml">
                <form string="Tenant">  
                    <group colspan="4">                            
                        <field name="name"/>
                        <field name="company"/>
                        <field name="type"/>
                        <field name="grade"/>                        
                        <field name="participant"/>                            
                        <field name="location"/>
                        <field name="floor"/>
                        <field name="number"/>
                        <field name="start_date"/>
                        <field name="end_date"/>                        
                    </group>
                    <notebook colspan="4">
                        <page string="Contacts">
                            <field name="tenant_pic_ids" widget="one2many_list">
                                <tree string="Contacts">
                                    <field name="name"/>
                                    <field name="title"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
		
        <record model="ir.ui.view" id="view_rdm_tenant_tree">
            <field name="name">rdm.tenant.tree</field>
            <field name="model">rdm.tenant</field>			
            <field name="type">tree</field>						
            <field name="arch" type="xml">
                <tree string="Customer">
                    <field name="name"/>                        
                    <field name="company"/>
                    <field name="grade"/>                     
                    <field name="participant"/>
                </tree>
            </field>
        </record>
        
        <!-- RDM/ACTION -->
        <!-- TENANT -->
	<record model="ir.actions.act_window" id="action_rdm_tenant">
            <field name="name">Tenant</field>
            <field name="res_model">rdm.tenant</field>
            <field name="view_mode">tree,form</field>
        </record>		
        <!-- MENU -->
        
    </data>
</openerp>